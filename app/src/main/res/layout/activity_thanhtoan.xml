<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".thanhtoan">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_marginTop="10dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/nh" />

    <Button
        android:id="@+id/dkmomo"
        android:layout_width="306dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text=" MOMO"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />

    <Button
        android:id="@+id/dkvnpay"
        android:layout_width="311dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text=" VNPAY"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />

    <Button
        android:id="@+id/dkairpay"
        android:layout_width="320dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="AIRPAY"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />

    <Button
        android:id="@+id/dkzalopay"
        android:layout_width="311dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text=" ZALOPAY"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />

    <Button
        android:id="@+id/dkquaylai3"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text=" Quay lại "
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />

    <Button
        android:id="@+id/dkxacnhan3"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text=" Xác nhận"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />
</LinearLayout>