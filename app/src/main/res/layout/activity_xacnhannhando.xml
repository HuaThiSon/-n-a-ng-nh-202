<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".xacnhannhando">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_marginTop="10dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/nh" />
    <EditText
        android:id="@+id/dksodienthoai1"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:hint="Số điện thoại(027384912)"
        android:textColorHint="#0E0909"></EditText>
    <EditText
        android:id="@+id/dksohieuotu1"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:hint="Số hiệu ô tủ (0001)"
        android:textColorHint="#0E0909"></EditText>

    <Button
        android:id="@+id/dkxacnhan1"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="xác nhận"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="10dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />
    <Button
        android:id="@+id/dkquaylai1"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="quay lại"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="10dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />
</LinearLayout>