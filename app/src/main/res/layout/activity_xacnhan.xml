<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".xacnhan">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_marginTop="50dp"
        android:layout_height="111dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/nh" />
    <EditText
        android:id="@+id/dksodienthoainguoinhan"
        android:layout_marginTop="150dp"
        android:layout_gravity="left"
        android:hint="Số điện thoại người nhận(0326338156)"
        android:layout_width="419dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/kichthuocotu"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:hint="kích thước ô tủ(20X20) "
        android:layout_width="419dp"
        android:layout_height="wrap_content"></EditText>
    <EditText
        android:id="@+id/dksohieuotu"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:hint="số hiệu ô tủ (0001)"
        android:layout_width="419dp"
        android:layout_height="wrap_content"></EditText>


    <Button
        android:id="@+id/next"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text=" next"
        android:textColor="#201919"
        android:textColorHighlight="#954141"
        android:textColorHint="#4C2D2D"
        android:textScaleX="1"
        android:textSize="20dp"
        app:backgroundTint="#89D5DF"
        app:cornerRadius="40sp" />
</LinearLayout>